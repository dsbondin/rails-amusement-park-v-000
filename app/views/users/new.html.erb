<h1>New User</h1>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label "Height (in inches)" %><br />
    <%= f.text_field :height %>
  </p>

  <p>
    <%= f.label "How happy are you? (1-5)" %><br />
    <%= f.text_field :happiness %>
  </p>

  <p>
    <%= f.label "How nauseous are you? (1-5)" %><br />
    <%= f.text_field :nausea %>
  </p>

  <p>
    <%= f.label "How many dollars are in your poket?" %><br />
    <%= f.text_field :tickets %>
  </p>

  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label "Check box if you are the park owner" %>
    <%= f.check_box :admin, {}, "true" %>
  </p>

  <%= f.submit %>

<% end %>
